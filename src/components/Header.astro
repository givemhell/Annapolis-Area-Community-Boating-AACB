---
import config from '../../config.json';

interface Props {
  title: string;
}

const { aacbLogoUrl } = config;
---

<header>
  <nav>
    <a href="/" class="logo"><img src={aacbLogoUrl} alt="AACB Logo" /></a>
    <div class="nav-links">
      <a href="/">Home</a>
      <a href="/programs">Programs</a>
      <a href="/events">Events</a>
      <a href="/courses">Courses</a>
      <a href="/interscholastic-sailing">Interscholastic Sailing</a>
      <a href="/careers">Careers</a>
      <a href="/about">About Us</a>
      <a href="/donate">Donate</a>
      <a href="/contact">Contact Us</a>
      <input type="search" placeholder="Search" />
    </div>
  </nav>
</header>

<style>
header {
    background-color: #333;
    color: white;
    padding: 1rem 0;
}

nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

.logo {
    font-size: 1.5rem;
    font-weight: bold;
    color: white;
    text-decoration: none;
}

.logo img {
  width: 50px; /* Adjust as needed */
  height: auto;
}

.nav-links {
    display: flex;
    gap: 20px;
}

.nav-links a {
    color: white;
    text-decoration: none;
    transition: color 0.3s ease;
}

.nav-links a:hover {
    color: #bbb;
}

input[type="search"] {
    padding: 8px;
    border: none;
    border-radius: 5px;
}
</style>
