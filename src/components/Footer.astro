---
import config from '../../config.json';

const { facebook, instagram, youtube, twitter } = config.socialMedia;
const { address, phone, email } = config.contactInfo;
---

<footer>
  <div class="footer-content">
    <div class="footer-links">
      <a href="/">Home</a>
      <a href="/programs">Programs</a>
      <a href="/events">Events</a>
      <a href="/courses">Courses</a>
      <a href="/interscholastic-sailing">Interscholastic Sailing</a>
      <a href="/careers">Careers</a>
      <a href="/about">About Us</a>
      <a href="/donate">Donate</a>
      <a href="/contact">Contact Us</a>
    </div>
    <div class="social-media">
      <a href={facebook}><img src="/facebook.svg" alt="Facebook" /></a>
      <a href={instagram}><img src="/instagram.svg" alt="Instagram" /></a>
      <a href={youtube}><img src="/youtube.svg" alt="YouTube" /></a>
      <a href={twitter}><img src="/twitter.svg" alt="Twitter" /></a>
    </div>
    <div class="contact-info">
      <p>Address: {address}</p>
      <p>Phone: {phone}</p>
      <p>Email: {email}</p>
    </div>
  </div>
  <div class="footer-bottom">
    <p>&copy; {new Date().getFullYear()} Annapolis Area Community Boating. All rights reserved.</p>
  </div>
</footer>

<style>
footer {
    background-color: #222;
    color: white;
    padding: 20px 0;
    text-align: center;
}

.footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
}

.footer-links {
    display: flex;
    gap: 20px;
}

.footer-links a {
    color: white;
    text-decoration: none;
    transition: color 0.3s ease;
}

.footer-links a:hover {
    color: #bbb;
}

.social-media {
    display: flex;
    gap: 10px;
}

.social-media img {
    width: 30px;
    height: 30px;
}

.contact-info {
    font-size: 0.9em;
}

.footer-bottom {
    margin-top: 20px;
    font-size: 0.8em;
    color: #aaa;
}
</style>
