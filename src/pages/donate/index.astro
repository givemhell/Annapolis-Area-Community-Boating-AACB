---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout title="Donate to AACB">
  <Header title="Donate" />
  <main>
    <section class="intro">
      <h2>Support Annapolis Area Community Boating</h2>
      <p>Your donation helps us provide accessible boating education and opportunities.</p>
    </section>

    <section class="donation-options">
      <h3>Donation Options</h3>
      <ul>
        <li>One-time donation</li>
        <li>Monthly donation</li>
        <li>In-kind donation</li>
      </ul>
    </section>

    <section class="how-to-donate">
      <h3>How to Donate</h3>
      <p>Information on how to make a donation online or by mail.</p>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: black;
    font-size: 20px;
    line-height: 1.6;
  }
</style>
