---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout title="AACB Events">
  <Header title="AACB Events" />
  <main>
    <section class="intro">
      <h2>Upcoming Events Calendar</h2>
      <p>Interactive calendar of events such as training sessions, safety seminars, races, and social meet-ups.</p>
    </section>

    <section class="calendar">
      <div class="event">
        <h3>Training Session</h3>
        <p>Date: July 10, 2024</p>
        <a href="/events/training-session">Register</a>
      </div>
      <div class="event">
        <h3>Safety Seminar</h3>
        <p>Date: July 17, 2024</p>
        <a href="/events/safety-seminar">Register</a>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: black;
    font-size: 20px;
    line-height: 1.6;
  }

  .calendar {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-top: 20px;
  }

  .event {
    border: 1px solid #ddd;
    padding: 15px;
    border-radius: 5px;
  }
</style>
