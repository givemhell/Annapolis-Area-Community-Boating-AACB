---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import config from '../../config.json';

const { donateUrl, events } = config;
---

<Layout title="Annapolis Area Community Boating">
  <Header title="AACB" />
  <main>
    <section class="hero">
      <img src="/banner.jpg" alt="Boats on the water" />
      <a href="/programs" class="cta-button">Get Started - Explore Our Programs</a>
    </section>

    <section class="intro">
      <p>
        Welcome to Annapolis Area Community Boating (AACB)! Our mission is to provide accessible boating education and opportunities, promoting boating safety, skill development, and career awareness for all ages.
      </p>
      <div class="important-links">
        <a href="/programs">Programs</a>
        <a href="/courses">Courses</a>
        <a href="/donate">Donate</a>
      </div>
    </section>

    <section class="featured-programs">
      <h2>Featured Programs</h2>
      <div class="programs">
        <div class="program">
          <h3>Youth Programs</h3>
          <p>Sailing, powerboating, kayaking, and paddleboarding for youth.</p>
        </div>
        <div class="program">
          <h3>Adult Education</h3>
          <p>Safety courses, certifications, and recreational boating for adults.</p>
        </div>
        <div class="program">
          <h3>High School Sailing</h3>
          <p>Supporting local interscholastic sailing teams.</p>
        </div>
      </div>
    </section>

    <section class="upcoming-events">
      <h2>Upcoming Events</h2>
      <h2>Upcoming Events</h2>
      <div class="events">
        {events.map((event) => (
          <div class="event">
            <h3>{event.name}</h3>
            <p>Date: {event.date}</p>
            <p>Time: {event.time}</p>
          </div>
        ))}
      </div>
      <a href="/events">View Full Calendar</a>
    </section>

    <section class="call-to-action">
      <a href="/volunteer" class="cta-button">Join Us Today</a>
      <a href={donateUrl} class="cta-button">Donate Now</a>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  /* General Styles */
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: black;
    font-size: 20px;
    line-height: 1.6;
  }

  .cta-button {
    background-color: #007bff;
    color: white;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }

  .cta-button:hover {
    background-color: #0056b3;
  }

  /* Hero Section */
  .hero {
    position: relative;
    text-align: center;
    color: white;
  }

  .hero img {
    width: 100%;
    height: auto;
    border-radius: 10px;
  }

  .hero h1 {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 2.5rem;
    background-color: rgba(0, 0, 0, 0.5);
    padding: 10px;
    border-radius: 5px;
  }

  /* Intro Section */
  .intro {
    margin-top: 2rem;
    text-align: center;
  }

  .important-links {
    margin-top: 1rem;
  }

  .important-links a {
    margin: 0 10px;
    color: #007bff;
    text-decoration: none;
  }

  /* Featured Programs Section */
  .featured-programs {
    margin-top: 2rem;
    text-align: center;
  }

  .programs {
    display: flex;
    justify-content: space-around;
    margin-top: 1rem;
  }

  .program {
    padding: 15px;
    border: 1px solid #ddd;
    border-radius: 5px;
  }

  /* Upcoming Events Section */
  .upcoming-events {
    margin-top: 2rem;
    text-align: center;
  }

  .events {
    display: flex;
    justify-content: space-around;
    margin-top: 1rem;
  }

  .event {
    padding: 15px;
    border: 1px solid #ddd;
    border-radius: 5px;
    text-align: left;
  }

  /* Call to Action Section */
  .call-to-action {
    margin-top: 2rem;
    text-align: center;
  }
</style>
